html,body{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 12px;
    /*禁止选择*/
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Chrome/Safari/Opera */
    -khtml-user-select: none; /* Konqueror */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none;
}
#app-root{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
input,select{
    outline: none;
}

.c_blue{
    color: #282afd;
}
.c_red{
    color: #ff0b0b;
}
.data-table{
    background: #fff;
    margin-top: 10px;
}
.data-table .layui-table-body.layui-table-main{
    /* border-bottom: 1px solid #e6e6e6; */
}
.data-table .layui-table-view{
    border-bottom: none;
}
.data-table .layui-table,.data-table .layui-table-view{
    margin: 0px 0;  
    
}
.data-table .layui-table-header{
    position: relative;
    z-index: 1;
}
.layui-table-body{
    z-index: 1;
}
.data-table .layui-table-header,.data-table .layui-table-header tr{
    background-color:#EDF3F7 !important;
    color: #333;
}
.data-table .layui-table td, .data-table .layui-table th {
    padding: 1px 0;
}
.data-table table.layui-table{
    border-bottom: 1px solid #e6e6e6;
}


.trade_btn{
    display: inline-block;
    background: url(../imgs/trade_btn_bg.png) no-repeat;
    background-position: 0 0;
    width: 60px;
    height: 21px;
    border: none;
    cursor: pointer;
    text-align: center;
    font-size: 12px;
    line-height: 21px;
}
.trade_btn:hover{
    background-position: 0 -42px;
}
.trade_btn:active{
    background-position: 0 -21px;
    color: #FC0000;
}

.input_no_border{
    border:none !important;
    background:#ECF3F6;
}

.layui-form{
    height: 100% !important;
}
.layui-table-box{
    height: 100% !important;
}
.layer-table-Rline{
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    left: 0;
    top: 0;
}
.layer-table-Rline div{
    height: 100%;
    float: left;
    border-right: 1px solid #e6e6e6;
    padding: 0 17px 0 17px;
    box-sizing: border-box;
    margin-left: 1px;
}
.table-hover{
    background: rgba(150,210,255, 1);
}