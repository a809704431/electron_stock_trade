
html,body{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 12px;
   
}
input,select{
    outline: none;
}

.c_blue{
    color: #282afd;
}
.c_red{
    color: #ff0b0b;
}

#app-root{
    border: #666666 1px solid;
    background: #ecf3f6;
    border-radius: 5px;
    position: relative;
    height: 100%;
    box-sizing: border-box;
    overflow: hidden;
}
.app_bar{
    height: 22px;
    background: url(../imgs/bar_bg_1.png) repeat-x;
    background-size: 100% 100%;
    display: flex;
    justify-content: space-between;
    align-items:center;
    border-bottom: 1px solid #aab7c7;
}
.app_act_btn{
    background: url(../imgs/bar_act.png) no-repeat;
    width: 87px;
    height: 17px;
    cursor: pointer;
}
.app_act_btn div{
    width: 33%;
    float: left;
    height: 100%;
}
.app_bar_title{
    padding-left: 20px;
    margin-left: 15px;
    background: url(../imgs/icon/icon_0.png) no-repeat left center;
    background-size: auto 16px;
    -webkit-app-region: drag;
    width: 90%;
}
.act_bar{
    background: url(../imgs/bar_bg_2.png) repeat-x;
    background-size: 100% 100%;
    height: 48px;
    display: flex;
    justify-content: space-between;
    align-items:center;
}
.app_foot{
    height: 24px;
    line-height: 24px;
    position: absolute;
    bottom: 0;
    left: 0;
    
}
.act_item{
    float: left;
    margin-left: 18px;
    color: #666666;
}

.stock_body{
    height: calc(100% - 96px);
    position: relative;
}
.stock_left{
    height: 100%;
    width: 200px;
    border-top:#d8d8d8  1px solid;
    border-right: #d8d8d8  1px solid;
    border-bottom:  #d8d8d8  1px solid;
    overflow: hidden;
    overflow-y: auto;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
}
#min_body{
    height: 100%;
    width: calc(100% - 210px);
    margin-left: 210px;
   
    border-top:#d8d8d8  1px solid;
    border-left: #d8d8d8  1px solid;
    border-bottom:  #d8d8d8  1px solid;
}

.menu_list .item{
    height: 20px;
    line-height: 20px;
    padding-left: 25px;
    background: url(../imgs/icon/icon_5.png) no-repeat left center;
    background-size:20px 20px;
    margin-left: 10px;
    cursor: pointer;
}
.menu_list .item span{
    padding: 2px 3px;
}
.menu_list .item.on span{
    background: #1550e7;
    color: #fff;
}
.menu_list .child{
    margin-left: 20px;
}
.menu_list .item.icon_buy{
    background: url(../imgs/icon/icon_8.png) no-repeat left center;
}
.menu_list .item.icon_sell{
    background: url(../imgs/icon/icon_1.png) no-repeat left center;
}
.menu_list .item.icon_cancel{
    background: url(../imgs/icon/icon_7.png) no-repeat left center;
}
.menu_list .item.icon_search{
    background: url(../imgs/icon/icon_3.png) no-repeat left center;
}
.menu_list .item.icon_loan{
    background: url(../imgs/icon/icon_2.png) no-repeat left center;
}
.menu_list .item.icon_bank{
    background: url(../imgs/icon/icon_10.png) no-repeat left center;
}
.menu_list .item.icon_money{
    background: url(../imgs/icon/icon_11.png) no-repeat left center;
}
.lock_page{
    background: #e2e2e2;
    position: absolute;
    top: 23px;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    display: flex;
    flex-direction: column;
    justify-content: center;
}