
html,body{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 12px;
    /*禁止选择*/
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Chrome/Safari/Opera */
    -khtml-user-select: none; /* Konqueror */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none;
}
input,select{
    outline: none;
}
select:focus{outline:none;}

#app-root{
    background: url(../imgs/login/bg.jpg) no-repeat;
    background-size: 100% 100%;
    border: #666666 1px solid;
    border-radius: 12px;
}
header{
    box-sizing: border-box;
    padding: 5px 15px;
    font-size: 15px;
    line-height: 1.5;
    font-weight: 600;
    width: 100%;
}
.login_from{
    margin-top: 30px;
    margin: 0 15px;
    border: #999999 1px solid;
    padding: 15px;
    background: url(../imgs/login/bg.jpg) no-repeat;
    background-size: 100% 100%;
}
.from_item{
    height: 30px;
    line-height: 30px;
}
.from_lable{
    float: left;
    width: 80px;
    text-align: right;
    margin-right: 5px;
}
.input-common{
    width: 200px;
}
.close{
    position: absolute;
    top: 8px;
    right: 12px;
    width: 20px;
    height: 20px;
    background: url(../imgs/login/close.png) no-repeat;
    background-size: 100% 100%;
    cursor: pointer;
    z-index: 2;
}
.close:active{
    background: url(../imgs/login/close_ed.png) no-repeat;
}