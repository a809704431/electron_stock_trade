<script>
  const { ipcRenderer } = require('electron');
  ipcRenderer.on('message', (event, { message, data }) => {
      switch (message) {
          case 'isUpdateNow':
          var result = remote.app.untils.dialogsync('检测到当前有新的版本。','版本提示','info',{buttons:['立即更新','关闭'],defaultId :0,cancelId :1,noLink:true});
          if(result==0){
            ipcRenderer.send('updateNow');
          }else{
            close();
          }
          break;
      }
  });


  setInterval(function() {
    ipcRenderer.send('checkUpdate');
  },600000)


  var mouse_even = null;
  var win_size = null;
  var win_point = null;;
  let point = null;
  $('.border-drag').mousedown(function(e){
    mouse_even = [e.screenX ,e.screenY];
    point = [e.screenX ,e.screenY];
      console.log('strart',mouse_even);
      var fxtype  = $(this).attr('data-fx');
      win_size = remote.getCurrentWindow().getSize();
      win_point = remote.getCurrentWindow().getPosition();
      console.log('win_point',win_point);
      $(Document).on('mousemove',function(e) {
          if(mouse_even){
             point = [e.screenX ,e.screenY];
            // switch(fxtype){
            //   case 'z1': //改变宽度
            //   case 'z2': 
            //     let twidth = 0
            //     if(fxtype=='z1'){
            //       twidth = win_size[0]-(point[0]-mouse_even[0]);
            //     }else{
            //       twidth = win_size[0]+(point[0]-mouse_even[0]);
            //     }
            //     console.log(twidth, win_size[1]);
            //     remote.getCurrentWindow().setSize(twidth, win_size[1]);
            //   break;
            // }


          }
      })
      $(Document).on('mouseup',function(e) {
        if(mouse_even){
          $(Document).off('mouseup');
          $(Document).off('mouseleave');
          $(Document).off('mousemove');
          
          let nw = 0;
          let nh = 0;
          let nx = 0;
          let ny = 0;
          let change = 0;
          let changey = 0;
            switch(fxtype){
              case 'z1': //改变宽度
              case 'z2': 
              
                change = 0;
                change = (point[0]-mouse_even[0]);
              
                 nh = win_size[1];
                 ny = win_point[1];
                if(fxtype=='z1'){
                  nw = win_size[0]-change;
                  nx = win_point[0]+change;
                }else{
                  nw = win_size[0]+change;
                  nx = win_point[0];
                }

                console.log(nw,nh,nx,ny);
               
              break;
              case 's1': //改变高度
              case 's2': 
                change = 0;
                change = (point[1]-mouse_even[1]);
              
                nw = win_size[0];
                nx = win_point[0];

                if(fxtype=='s1'){
                  nh = win_size[1]-change;
                  ny = win_point[1]+change;
                }else{
                  nh = win_size[1]+change;
                  ny = win_point[1];
                }

                console.log(nw,nh,nx,ny);
               
              break;
              // case 'zs': //双向改变
              // case 'zx': 
              //   change = 0;
              //   change = (point[0]-mouse_even[0]);
              //   changey = (point[1]-mouse_even[1]);
              //   nw = win_size[0];
              //   nx = win_point[0];

              //   if(fxtype=='zs'){
              //     nh = win_size[1]-change;
              //     ny = win_point[1]+change;
              //   }else{
              //     nh = win_size[1]+change;
              //     ny = win_point[1];
              //   }
              //   console.log(nw,nh,nx,ny);
              // break;

              default:
                return;
            }

            if(nw<1200){
              nw=1200;
            }
            if(nh<650){
              nh=650;
            }
              //$('#min_body').css({'width':'1000px'});
              //remote.getCurrentWindow().setSize(nw, nh);
              //remote.getCurrentWindow().setPosition(nx,ny);
              remote.getCurrentWindow().setBounds({ x: nx, y: ny, width: nw, height: nh })
              //$('#min_body').css({'width':($('#app-root').width()-210)+'px'});

            mouse_even = null;

        }
      })

      $(Document).on('mouseup',function(e) {
        if(mouse_even){
          $(Document).off('mouseup');
          $(Document).off('mouseleave');
          $(Document).off('mousemove');
           mouse_even = null;
        } 
      });
    
  });
  
  
